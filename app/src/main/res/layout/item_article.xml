<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
                name="data"
                type="com.kotlinstrong.bean.Article" />

        <variable
                name="click"
                type="com.kotlinstrong.stronglib.listener.Function" />
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

            <ImageView
                    android:layout_width="@dimen/d100.0"
                    android:layout_height="@dimen/d100.0"
                    android:src="@mipmap/home_hot" />

            <TextView
                    android:id="@+id/articleAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/d40.0"
                    android:layout_marginEnd="@dimen/d40.0"
                    android:textColor="@color/color_4b9c74"
                    android:textSize="@dimen/d40.0"
                    android:text="@{data.author}" />

            <TextView
                    android:id="@+id/articleTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/d40.0"
                    android:layout_marginEnd="@dimen/d40.0"
                    android:textColor="@color/color_4b9c74"
                    android:textSize="@dimen/d40.0"
                    android:text="android" />

        </LinearLayout>

        <TextView
                android:id="@+id/articleTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#1c1c1e"
                android:textSize="@dimen/d40.0"
                android:layout_marginTop="@dimen/d6.0"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d11.0"
                android:gravity="center_vertical">

            <ImageView
                    android:layout_width="@dimen/d100.0"
                    android:layout_height="@dimen/d100.0"
                    android:src="@mipmap/home_hot" />

            <TextView
                    android:id="@+id/articleTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/d40.0"
                    android:layout_marginEnd="@dimen/d40.0"
                    android:textColor="@color/color_4b9c74"
                    android:textSize="@dimen/d80.0"
                    android:text="@{data.niceDate}" />

            <ImageView
                    android:id="@+id/articleStar"
                    android:layout_width="@dimen/d100.0"
                    android:layout_height="@dimen/d100.0"
                    android:paddingTop="@dimen/d6.0"
                    android:paddingBottom="@dimen/d6.0"
                    android:src="@mipmap/home_hot"
                    android:layout_marginLeft="@dimen/d40.0"/>
        </LinearLayout>

    </LinearLayout>
</layout>
